body
.header
  position absolute
  z-index 5
  width 100%
  text-align center
  color #fff
  background url("../../image/banner_img_shadow@2x.png")no-repeat
  background-size 100%
  background-color transparent
  .icon-back
    width 65px
    background transparent url("../../image/nav_icon_down@2x.png")no-repeat left 50px center
    background-size 12px 6px
    line-height 50px
    position absolute
    left 12px
    font-size 14px
  .header_title
    font-size 20px;
    line-height 50px
.search_box
  position absolute
  top 50px
  right 12px
  left 12px
  z-index 5
  .search_input
    height 34px
    line-height 34px
    border-radius 3px
    background-color #f1f1f1
    text-align center
    color #bcbcbc
    .icon_search
      display inline-block
      width 30px
      height 30px
      background url("../../image/banner_icon_search@2x.png")no-repeat center
      background-size 16px
      vertical-align bottom
      margin-bottom 1px
      font-size 12px
    .inp_text
      font-size 14px
.banner_box
  width 100%
  height 320px
  overflow hidden
  .banner_container
    height 320px
    transition  all .5s
    transform  translateX(0)
    &:after
      content ''
      display block
      visibility hidden
      height 0
      clear both
.banner_block
  float left
  width 100%
  height 320px
  background url("../../image/banner_img1@2x.png")no-repeat center
  //background-size 375px 320px
  background-size 100%
  position absolute
  top 0
  z-index 3
